{
  "name": "math-mcp",
  "version": "0.0.0-development",
  "description": "MCP server for mathematical expression evaluation with strict grammar validation",
  "main": "dist/index.js",
  "bin": {
    "math-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "install-global": "npm run build && npm install -g .",
    "setup": "npm install && npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "math",
    "expression",
    "evaluation",
    "grammar",
    "validation",
    "mathematical",
    "calculator",
    "parser",
    "secure",
    "model-context-protocol",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Desz01ate/math-mcp.git"
  },
  "homepage": "https://github.com/Desz01ate/math-mcp#readme",
  "bugs": {
    "url": "https://github.com/Desz01ate/math-mcp/issues"
  },
  "files": [
    "dist",
    "grammar.txt",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^14.0.0",
    "decimal.js": "^10.6.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
